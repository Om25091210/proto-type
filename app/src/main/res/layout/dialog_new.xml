<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/logout_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorry for inconvinience!!"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="42dp"
        android:textColor="#004445"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/dissatisfied"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/cancel_logout"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:text="OK"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="@dimen/dimen_23dp"
        android:textColor="@color/white"
        android:background="@drawable/cancel_background"
        android:textSize="20dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</LinearLayout>